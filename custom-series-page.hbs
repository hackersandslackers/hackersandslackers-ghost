{{!< default}}

{{#page}}
<div class="page">

      <section class="page-head">
        <h1 class="title">{{{title}}}</h1>
        <div class="content">
          {{content}}
        </div>
      </section>

      <main class="tag-container">
        {{> cover-tag}}
        {{#get "tags" filter="feature_image:-null" include="count.posts,meta_title" order="count.posts desc" }}
          {{#foreach tags visibility="internal"}}
            <div class="series-card">
              <a href="{{url}}">
                {{#if feature_image}}
                  <picture>
                    <source
                            media="(min-width: 1200px)"
                            srcset="{{img_url feature_image size="medium"}} 1x,
                                    {{img_url feature_image size="medium_retina"}} 2x">
                    <img alt="{{title}}" class="lazy" src="{{img_url feature_image}}">
                  </picture>
                {{/if}}
                <div class="description">
                  <h2>{{title}}</h2>
                  <p>{{description}}</p>
                  <span class="post-count">
                    {{plural count.posts empty=(t "0 Post") singular=(t "% Post") plural=(t "% Posts")}}
                  </span>
                </div>
              </a>
            </div>
          {{/foreach}}
        {{/get}}
      </main>

</div>

{{/page}}
