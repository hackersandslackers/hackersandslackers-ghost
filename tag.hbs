{{!< default}}

{{#tag}}
  <div class='archive tag-card'>
    {{#if feature_image}}
      <img src="{{img_url feature_image}}" alt="{{ title }}" class="tag-image"/>
    {{/if}}
    <div>
      <h1 class='archive__title'>{{ name }}</h1>
      {{#if description}}
        <p class='archive__description'>{{ description }}</p>
      {{/if}}
    </div>
  </div>
{{/tag}}

