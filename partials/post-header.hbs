<header class='post-header'>
  {{#if feature_image}}
    <picture class="post-image">
      <source
          media="(max-width:600px)"
          srcset='{{ img_url feature_image size='ml' }}'
      />
      <source
          srcset='{{ img_url feature_image size='xl' }}' />
      <img
           class="post-card-image lazyload"
           data-src='{{ img_url featureImage size='xl' }}'
           alt='{{ title }}'
           title='{{ title }}'
      />
    </picture>
  {{/if}}

  <h1 class='post-title'>{{ title }}</h1>

  {{#if custom_excerpt}}
    <p class='post-header__excerpt'>{{ custom_excerpt }}</p>
  {{/if}}

  {{#is 'post'}}
    <div class='post-header__meta'>
      {{#primary_author}}
        <a href='{{ url }}' class='post-header__author'>
          {{#if profile_image}}
            <div class='post-header__author_media'>
              <img
                      class='post-header__author_image lazyload'
                      data-src='{{ img_url profile_image size='xs' }}'
                      alt='{{ name }}'
                      width='32'
                      height='32'
              />
            </div>
          {{/if}}
          <div class='post-header__author_info'>
            <div class='post-header__author_name'>
              {{ name }}
            </div>
      {{/primary_author}}
      <time
              class='post-header__date'
              datetime='{{ date format='YYYY-MM-DD' }}'
              title='{{ date format='DD MMMM YYYY' }}'>
        {{ date format='DD MMM YYYY' }}
      </time>
    </div>
    </a>

    {{> share }}
    </div>
  {{/is}}
</header>
