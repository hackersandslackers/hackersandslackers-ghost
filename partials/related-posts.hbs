<!--
  Get related posts based on tags
 -->

{{#get 'posts'
  limit='3'
  include='authors,tags'
  filter='filter="tags:[{{post.tags}}]+slug:-{{slug}}+tags:-[hash-hidden,roundup]'
  order="published_at desc" as |related-posts|}}
  {{#if related-posts}}
    <div class='related'>
      <div class='title-bar'>
        <h3 class='title-bar__title'>{{t 'You might also like' }}</h3>
      </div>
    {{> loop }}
    </div>
  {{/if}}
{{/get}}
